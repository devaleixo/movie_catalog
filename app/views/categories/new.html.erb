<div class="row justify-content-center">
  <div class="col-lg-6">
    <div class="text-center mb-4">
      <h1>🏷️ Nova Categoria</h1>
      <p class="lead" style="color: var(--color-gold);">Adicione um novo gênero ao catálogo</p>
    </div>

    <div class="card" style="background-color: var(--color-dark-gray); border: 1px solid var(--color-medium-gray); border-radius: 12px; padding: 2rem;">
      <%= render "form", category: @category %>
    </div>

    <div class="mt-4 text-center">
      <%= link_to '⬅ Voltar', categories_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
